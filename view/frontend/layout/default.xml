<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="magepow_sitemap_footer"
                   ifconfig="magepow_sitemap/general/enabled">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">HTML Sitemap</argument>
                    <argument name="path" xsi:type="string">sitemap/</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
 